# Auto detect text files and normalize line endings to LF
* text=auto eol=lf

# PHP files
*.php text eol=lf

# CSS/SCSS files
*.css text eol=lf
*.scss text eol=lf

# JavaScript files
*.js text eol=lf

# Markdown files
*.md text eol=lf

# XML files
*.xml text eol=lf

# JSON files
*.json text eol=lf

# Shell scripts
*.sh text eol=lf

# Images (binary)
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary

# Fonts (binary)
*.woff binary
*.woff2 binary
*.eot binary
*.ttf binary
*.otf binary
